<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".Fragmentos.FragmentCuenta">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Txt_perfil"
        android:text="@string/Txt_perfil"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/Iv_perfil"
        android:layout_below="@id/Txt_perfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_perfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/Txt_informacion"
        android:text="@string/Txt_informacion"
        android:layout_below="@id/Iv_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <!--Nombres-->
    <TextView
        android:id="@+id/Txt_nombres"
        android:text="@string/Txt_nombres"
        android:layout_below="@id/Txt_informacion"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_nombres"
        android:text="@string/Tv_nombres"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Email-->
    <TextView
        android:id="@+id/Txt_email"
        android:text="@string/Txt_email"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_nombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_Email"
        android:text="@string/Tv_Email"
        android:layout_below="@id/Txt_nombres"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Fecha de nacimiento-->

    <TextView
        android:id="@+id/Txt_nacimiento"
        android:text="@string/Txt_nacimiento"
        android:layout_below="@id/Txt_email"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_nacimiento"
        android:text="@string/Tv_nacimiento"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Miembro desde-->


    <TextView
        android:id="@+id/Txt_miembro"
        android:text="@string/Txt_miembro"
        android:layout_below="@id/Txt_nacimiento"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_miembro"
        android:text="@string/Tv_miembro"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Telefono del usuario-->


    <TextView
        android:id="@+id/Txt_telefono"
        android:text="@string/Txt_telefono"
        android:layout_below="@id/Txt_miembro"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_telefono"
        android:text="@string/Tv_telefono"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_miembro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Estado de la cuenta-->


    <TextView
        android:id="@+id/Txt_estadocuenta"
        android:text="@string/Txt_estadocuenta"
        android:layout_below="@id/Txt_telefono"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_estadocuenta"
        android:text="@string/Tv_estadocuenta"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Txt_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--____-->

    <TextView
        android:id="@+id/Txt_opciones"
        android:text="@string/Txt_opciones"
        android:layout_below="@+id/Txt_estadocuenta"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Editar perfil-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Btn_editar_perfil"
        android:text="@string/Btn_editar_perfil"
        android:layout_below="@+id/Txt_opciones"
        android:textAllCaps="true"
        app:icon="@drawable/ic_editar_perfil"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="@dimen/m_buttom_height">

    </com.google.android.material.button.MaterialButton>

    <!--Cerrar sesiÃ³n-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Btn_cerrar_sesion"
        android:text="@string/Btn_cerrar_sesion"
        android:layout_below="@id/Btn_editar_perfil"
        android:textAllCaps="true"
        app:icon="@drawable/ic_salir"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="@dimen/m_buttom_height">

    </com.google.android.material.button.MaterialButton>

</RelativeLayout>



</ScrollView>